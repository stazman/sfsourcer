<%= render 'layouts/funding_projects_navbar' %>

<div class="container-fluid text-center">    
  <div class="row content">
    <div class="col-sm-2 sidenav">
      <h5>
        <%= link_to "Make a Pledge", new_pledge_path %>
      </h5>
      <br>
      <h5>
        <%= link_to "Back to Funding Projects Home Page", funding_projects_path %>
      </h5>
    </div>

    <div class="col-sm-8 text-left"> 
      <h1><%= @funding_project.title %></h1><br>
        <h4><%= @funding_project.description %></h4><br>
        <h4>(All amounts in U.S. dollars)</h4><br>

        <h4>Funding Goal: <%= @funding_project.funding_goal %></h4><br>
        <h4>Amount Pledged: <%= @funding_project.total_pledges %></h4><br>
        <h4>Amount Needed: <%= @funding_project.amount_needed %></h4><br>
    <br><br>
    <button id="largest_pledge_btn" data-id="<%=@funding_project.id%>">Largest Pledge</button>
    <br><br>
    <div id="largest_pledge"></div>
    <br>
  </div>
</div>


