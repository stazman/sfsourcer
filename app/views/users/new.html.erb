        <%# <ol> %>
      <li><%= sf_fave.text_field :fav_films %><br></li>
    <%# </ol>  %>
<h3>What are your favorite SF games?</h3>    
        <%# <ol> %>
      <li><%= sf_fave.text_field :fav_games %><br></li>
    <%# </ol>  %>
  <% end %>

  <%= f.submit "Create Account" %>
<% end %>
