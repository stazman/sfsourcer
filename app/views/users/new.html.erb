<h1>Make a Free Account!</h1><br>

<%= render partial: "errors" %>

<h3>Sign up with your email:</h3>

<%= form_for @user do |f| %>
<div class="field<%= ' field_with_errors' if @user.errors[:name].any? %>">
 <%= f.label :name %>
<%= f.text_field :name %>
  </div>
<div class="field<%= ' field_with_errors' if @user.errors[:email].any? %>">
<%= f.label :email %>
 <%= f.text_field :email %>
  </div>
<div class="field<%= ' field_with_errors' if @user.errors[:password].any? %>">
 <%= f.label :password %>
<%= f.text_field :password %>
  </div>

<h2>Let us know about your SF favorites!</h2>
    <%= f.fields_for :sf_favs do |sf_fave| %>
<h3>What are your favorite SF literary works?</h3>    
