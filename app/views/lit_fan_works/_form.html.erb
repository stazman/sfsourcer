<% if @lit_fan_work.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@lit_fan_work.errors.count, "error") %>
      prohibited this profile from being saved:
    </h2>
 
    <ul>
    <% @lit_fan_work.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @lit_fan_work do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %><br><br>
    <h4>Choose the author from the list of recommended authors below ... </h4>
    <%= lit_fan_author_select(@lit_fan_work.lit_fan_author, @lit_fan_work) %><br><br>
    <h4>or add a new one ...</h4>
    <%= f.text_field :lit_fan_author %><br><br>
    <%= f.submit "Submit" %>
<% end %>