<h1>Make a Pledge!</h1>

<%= form_for @fp_backer do |f| %>
    <h4><%= f.label "Name of Backer" %></h4>
    <h4><%= f.text_field :name %></h4><br>
    <h4><%= f.label "Backer Email" %></h4>
    <h4><%= f.text_field :backer_email %></h4><br><br>

    <h4><%= f.label "Choose the project" %></h4>
        <%= f.collection_check_boxes :funding_project_id, FundingProject.all, :id, :title %><br><br><br>
        <% end %><br><br><br>

    <h4><%= f.label "Choose/write the pledge amount" %></h4>
    <%= f.collection_select :pledge_id, Pledge.all, :id, :amount %><br><br><br>
        <%= f.fields_for :pledges, @fp_backer.pledges.build do |p|%><br>
        <h4><%= p.label "Amount" %></h4>
            <%= p.text_field :amount %><br><br>
    <% end %>
<%= f.submit "Create Pledge" %>
<% end %>
