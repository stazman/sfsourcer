    <div class="container" id="more-margin">
        <div>
            <%= form_for @pledge do |f| %>
                <h3><%= f.label "Choose the project" %></h3>
                <%= f.collection_select :funding_project_id, FundingProject.all, :id, :title %>
                <br><br>
                    <h3><%= f.label "Enter pledge amount" %></h3>
                    <%= f.text_field :amount %>
                <br><br><br>

                <h3>Backer Information</h3>
                <h5>(name/email not viewable at SFSourcer.com)</h5>
                <br>
                    <%= f.fields_for :fp_backer do |fpb| %>
                        <h5><%= fpb.label "Name of Backer" %></h5>
                        <h5><%= fpb.text_field :name %></h5><br>
                        <h5><%= fpb.label :backer_email %></h5>
                        <h5><%= fpb.text_field :backer_email %></h5>
                <br>
                <% end %>
            <%= f.submit "Create Pledge" %>
            <% end %>
        </div>
    </div>
    <br><br>